<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <record id="ir_cron_update_room_status_cron" model="ir.cron">
            <field name="name">Update Room Status</field>
            <field name="model_id" ref="model_hotel_booking"/>
            <field name="state">code</field>
            <field name="code">model.cron_update_room_status()</field>
            <field name="user_id" ref="base.user_root"/>
            <field name="interval_number">1</field>
            <field name="interval_type">hours</field>
            <field name="numbercall">-1</field>
            <field name="doall" eval="False"/>
        </record>

        <record id="ir_cron_generate_booking_report" model="ir.cron">
            <field name="name">Generate Booking Report</field>
            <field name="model_id" ref="model_hotel_booking_report"/>
            <field name="state">code</field>
            <field name="code">model.generate_booking_report()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
            <field name="doall" eval="False"/>
        </record>

        <record id="ir_cron_generate_customer_report" model="ir.cron">
            <field name="name">Generate Customer Report</field>
            <field name="model_id" ref="model_hotel_customer_report"/>
            <field name="state">code</field>
            <field name="code">model.generate_customer_report()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
            <field name="doall" eval="False"/>
        </record>
    </data>
</odoo>